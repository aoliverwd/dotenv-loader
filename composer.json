{
    "name": "alexoliverwd/dotenv-loader",
    "description": "Load environment variables into a PHP application",
    "keywords": [
        "env",
        "dotenv",
        "variables",
        "environment",
        "environment variables"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Oliver",
            "homepage": "https://github.com/aoliverwd",
            "role": "Lead"
        }
    ],
    "support": {
        "issues": "https://github.com/aoliverwd/dotenv-loader/issues"
    },
    "prefer-stable": true,
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "files": [
            "src/dotenv-loader.php"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^1.6",
        "pestphp/pest": "^1.23"
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpstan analyse -c phpstan.neon",
            "./vendor/bin/pest"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
